- const links = [{title: "Shop", url: "/"}, { title: "Add Product", url: "/admin/add-product"}]
doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title #{docTitle}
		link(rel="stylesheet", href="/css/main.css")
		block styles
	body
		header.main-header
			nav.main-header__nav
				ul.main-header__item-list
					each link in links
						li.main-header__item
							a(href=link.url, class = { 'active' : url === link.url }) #{link.title}
		block content