<body>
    <main>
        <% if (products.length > 0) { %>
            <ul>
                <% products.forEach(p => {%>
                    <li>
                        <p>
                        <%= p.title %>(<%= p.cartItem.quantity %>)
                        <form action="/cart-delete-item" method="POST">
                            <input type="hidden" value="<%= p.id %>" name="productId">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                        </p>
                    </li>
                    <% }) %>
            </ul>
            <% } else { %>
                <h1>no products</h1>
                <% } %>
        
    </main>
<%- include('../includes/end.ejs') %>
